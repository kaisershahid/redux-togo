{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020", "dom", "dom.iterable"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"noEmit": false,
		"declaration": true,
		"outDir": "./lib"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts"]
}
